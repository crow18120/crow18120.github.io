@model ASM_WEB_APP.Models.CourseTopic

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>CourseTopic</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Course.CourseName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Course.CourseName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Topic.TopicName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Topic.TopicName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Trainer.LastName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Trainer.LastName)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> 
            @if(ViewBag.Controller == "Trainers")
            {
                @Html.ActionLink("Back", "Details", "Trainers", new { id = Model.TrainerID}, htmlAttributes: new { @class = "btn btn-default"})
            }
            @if(ViewBag.Controller == "Courses")
            {
                @Html.ActionLink("Back", "Details", "Courses", new { id = Model.CourseID}, htmlAttributes: new { @class = "btn btn-default"})
            }
            @if(ViewBag.Controller == "CourseTopics")
            {
                @Html.ActionLink("Back", "Index", "CourseTopics", null, htmlAttributes: new { @class = "btn btn-default"})
            }
        </div>
    }
</div>
